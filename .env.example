NODE_ENV=production
PORT=5000

# Postgres
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DB
DATABASE_SSL=1

# Password security
BCRYPT_ROUNDS=12
PWD_PEPPER=ضع_قيمة_قوية_جداً_هنا

# JWT
JWT_ACCESS_SECRET=غيرني_سر_قوي
JWT_REFRESH_SECRET=غيرني_سر_أقوى
ACCESS_TTL=15m
REFRESH_TTL=7d

# CORS (افصل بين الدومينات بفاصلة)
CORS_ORIGIN=https://yourdomain.com,https://your-web.onrender.com

# Optional
ENABLE_METRICS=0
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=ChangeMe123!
